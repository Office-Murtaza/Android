<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    
        <ImageView
        android:id="@+id/imageView_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/result_image_for_top" >
        </ImageView>

    <TextView
        android:id="@+id/textView_game_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:text="結果"
        android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>


    
    <LinearLayout
        android:id="@+id/result_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_game_result_title"
        android:layout_below="@+id/textView_game_result_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_result_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>



    
        <TextView
        android:id="@+id/textView_result_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/result_title_layout"
        android:layout_below="@+id/result_title_layout"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>
    <TextView
        android:id="@+id/textView_position_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_game_result_title"
        android:layout_below="@+id/textView_result_duration"
        android:layout_marginTop="50dp"
        android:text="ハイスコア"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/layout_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_position_title"
        android:layout_below="@+id/textView_position_title"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/one"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_result_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/dot"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_first"
        android:layout_below="@+id/layout_first"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/two"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_result_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/dot"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_second"
        android:layout_below="@+id/layout_second"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/three"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_result_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:text="@string/dot"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    

    <Button
        android:id="@+id/button_result_one"
        android:layout_width="@dimen/game_button_wt"
        android:layout_height="@dimen/game_button_ht"
        android:layout_alignLeft="@+id/textView_position_title"
        android:layout_below="@+id/layout_third"
        android:layout_marginTop="40dp"
        android:background="@drawable/botton_background"
        android:text="もう一度遊ぶ"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_result_second"
        android:layout_width="@dimen/game_button_wt"
        android:layout_height="@dimen/game_button_ht"
        android:layout_alignLeft="@+id/button_result_one"
        android:layout_below="@+id/button_result_one"
        android:layout_marginTop="10dp"
        android:background="@drawable/botton_background"
        android:text="絵合わせ選択画面へ"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_result_third"
        android:layout_width="@dimen/game_button_wt"
        android:layout_height="@dimen/game_button_ht"
        android:layout_alignLeft="@+id/button_result_second"
        android:layout_below="@+id/button_result_second"
        android:layout_marginTop="10dp"
        android:background="@drawable/botton_background"
        android:text="メインメニューへ"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>