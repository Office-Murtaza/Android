<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_10"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/icon_ht_wt_40"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_download_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView_total_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="size"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView_remaining_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="remaining time"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" 
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_close"
                android:layout_width="@dimen/icon_ht_wt"
                android:layout_height="@dimen/icon_ht_wt"
                android:layout_margin="@dimen/margin_5"
                android:contentDescription="@string/playlist"
                android:src="@drawable/button_close" />

            <ImageView
                android:id="@+id/image_pause"
                android:layout_width="@dimen/icon_ht_wt"
                android:layout_height="@dimen/icon_ht_wt"
                android:layout_margin="@dimen/margin_5"
                android:contentDescription="@string/playlist"
                android:src="@drawable/button_pause" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="progress"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/download_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <!-- <Button -->
    <!-- android:id="@+id/cancel" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_gravity="right" -->
    <!-- android:text="Cancel" /> -->

</LinearLayout>