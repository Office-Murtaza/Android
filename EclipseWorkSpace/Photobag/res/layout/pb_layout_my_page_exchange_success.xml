<?xml version="1.0" encoding="utf-8"?>
<!-- D-01 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.aircast.photobag.widget.actionbar.ActionBar
        android:id="@+id/actionBar"
        style="@style/pb_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pb_layout_exchange_success_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/squarrel_fg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:lines="2"
            android:text="@string/pb_my_page_exchange_intro"
            android:textStyle="bold"
            android:textColor="@color/gray_deep_dark" />

        <ImageView
            android:id="@+id/squarrel_fg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/my_page_04_squarrel_fg" />

        <!-- <Button
             android:id="@+id/buttonBackToMyPage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/squarrel_fg"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="50dp"
             android:background="@drawable/btn_shape_brown"
             android:text="@string/back_to_my_page"
             android:textColor="@color/white"
             android:textSize="17sp"
             android:textStyle="bold" /> -->
             
        <com.aircast.photobag.widget.FButton
            android:id="@+id/buttonBackToMyPage"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/squarrel_fg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/back_to_my_page"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:buttonColor="#935243"
            app:shadowEnabled="false" />

    </RelativeLayout>
</LinearLayout>