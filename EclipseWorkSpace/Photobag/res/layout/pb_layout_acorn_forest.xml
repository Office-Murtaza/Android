<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg" >
    
    <com.aircast.photobag.widget.actionbar.ActionBar
        android:id="@+id/headerbar"
        style="@style/pb_actionbar" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/pb_null"
            android:scaleType="centerCrop"
            android:src="@drawable/acorn_forest_bg" />
        
        <Button
            android:id="@+id/btn_acorn_forest_road"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="230dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_forest_road" />
        
        <Button
            android:id="@+id/btn_acorn_forest_hill"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="190dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_forest_hill" />
        
        <Button
            android:id="@+id/btn_acorn_forest_bridge"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="145dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_forest_bridge" />
        
        <Button
            android:id="@+id/btn_acorn_forest_lake"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_forest_lake" />    
                
        <Button
            android:id="@+id/btn_acorn_forest_cave"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_forest_cave" />
    </RelativeLayout>    
    
    <LinearLayout
        android:id="@+id/layout_acorn_ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical" >
        <com.ad_stir.webview.AdstirWebView 
	        media="MEDIA-e194dab6"
	       spot="1"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content" />
    </LinearLayout>  
</LinearLayout>