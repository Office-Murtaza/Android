<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <com.aircast.photobag.widget.actionbar.ActionBar
        android:id="@+id/headerbar"
        style="@style/pb_actionbar" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|bottom" >
        
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="@dimen/pb_pic_add_screen_text_margin_bottom"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/pb_update_text"
            android:textColor="@color/main_text_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/pb_pic_add_screen_imageview_margin_bottom"
            android:background="@drawable/kuma07"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="@dimen/pb_download_bubble_margin_left_margin_bottom"
            android:layout_marginLeft="@dimen/pb_a03_bubble_margin_left"
            android:gravity="center"
            android:text="@string/pb_update_kuma_said"
            android:textColor="@color/main_text_color" />
        
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/pb_pic_add_screen_button_margin_bottom"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="40.0dp"
        android:paddingRight="40.0dp" >

  			<!--  <Button
            android:id="@+id/btn_download_photos"
            style="@style/TextShadowBlack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pb_btn_height"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_shape_orange"
            android:gravity="center"
            android:text="@string/btn_update_download_photos"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" /> -->
        <com.aircast.photobag.widget.FButton
            android:id="@+id/btn_download_photos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pb_btn_height"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/btn_update_download_photos"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:buttonColor="#ff735a"
            app:shadowEnabled="false" />
        
      <!--  <Button
            android:id="@+id/btn_not_download"
            style="@style/TextShadowBlack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pb_btn_height"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_shape_cancel"
            android:gravity="center"
            android:text="@string/btn_update_not_now"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" /> -->
        <com.aircast.photobag.widget.FButton
            android:id="@+id/btn_not_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pb_btn_height"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/btn_update_not_now"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:buttonColor="#bbbbbb" 
            app:shadowEnabled="false" />
        
    </LinearLayout>

</FrameLayout>