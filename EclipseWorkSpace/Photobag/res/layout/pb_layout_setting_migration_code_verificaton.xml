<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <com.aircast.photobag.widget.actionbar.ActionBar
        android:id="@+id/headerbar"
        style="@style/pb_actionbar" />
    
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/pb_setting_migration_code_verification_layout_margin_top"
       android:orientation="vertical"
       android:paddingLeft="40.0dp"
       android:paddingRight="40.0dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:text="@string/pb_migration_code_input"
            android:gravity="left"
            android:textSize="17sp"
            android:textStyle="bold" 
            android:layout_marginBottom="10dip" />
        

        
        <!-- <EditText
            android:id="@+id/edt_migration_code_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="17sp"
            android:gravity="center"
            android:singleLine="true" >
        </EditText> -->
        
                       
        <EditText
            android:id="@+id/edt_migration_code_input"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/pb_btn_height"
            android:layout_marginBottom="20dp"
            android:textSize="17sp"
            android:gravity="center"
            android:singleLine="true"
            android:background="@drawable/backwithborder" >
        </EditText>
        
        <ProgressBar
                android:id="@+id/migration_code_loading_panel_waiting"
                style="@style/costumLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
       />
        
        <com.aircast.photobag.widget.FButton
            android:id="@+id/btn_setting_sendDataMigration"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/pb_btn_height"
            android:gravity="center"
            android:text="@string/pb_send_migration_code_verify"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="40.0dp"
            android:paddingRight="40.0dp"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="40dip"
            app:buttonColor="#ff735a"
            app:shadowEnabled="false"
             />
        
       <com.aircast.photobag.widget.FButton
            android:id="@+id/btn_setting_checkDeviceLock"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/pb_btn_height"
            android:gravity="center"
            android:text="Device Lock"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="40.0dp"
            android:paddingRight="40.0dp"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="40dip"
            app:buttonColor="#ff735a"
            app:shadowEnabled="false"
             />
        
        <!-- <TextView
            android:layout_width="match_parent"
