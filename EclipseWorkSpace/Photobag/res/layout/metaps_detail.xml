<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/metaps_app_detail_layout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center"
  android:background="#ffffff"
  android:orientation="vertical">
  <RelativeLayout
    android:id="@+id/metaps_detail_outer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView
      android:id="@+id/metaps_detail_scroll"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:fadingEdge="none">
      <LinearLayout
        android:id="@+id/metaps_detail_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="10dip"
        android:paddingBottom="10dip">
        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingTop="5dp"
          android:paddingRight="20dp"
          android:paddingBottom="5dp"
          android:paddingLeft="20dp">
          <LinearLayout
            android:id="@+id/metaps_icon_area"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="5dp">
            <ProgressBar
              android:layout_width="30dip"
              android:id="@+id/metaps_app_detail_progress"
              android:layout_height="30dip"
              style="?android:attr/progressBarStyle">
            </ProgressBar>
            <ImageView
              android:id="@+id/metaps_detail_main_image"
              android:layout_width="55dp"
              android:layout_height="55dp"
              android:adjustViewBounds="true"
              android:visibility="gone">
            </ImageView>
          </LinearLayout>
          <LinearLayout
            android:id="@+id/metaps_detail_description_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/metaps_icon_area"
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingRight="4dp">
            <LinearLayout
              android:id="@+id/metaps_name_frame"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:layout_alignParentRight="true"
              android:paddingRight="3dp"
              android:gravity="bottom">
              <TextView
                android:text="AppName"
                android:id="@+id/metaps_app_name"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:singleLine="true"
                android:textColor="#808080"
                android:gravity="center_vertical">
              </TextView>
            </LinearLayout>
            <RelativeLayout
              android:id="@+id/metaps_wall_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <LinearLayout
                android:id="@+id/metaps_point_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="bottom">
                <TextView
                  android:text="Get"
                  android:id="@+id/metaps_point_prefix"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="#FF952B"
                  android:textSize="14dp"
                  android:textStyle="bold"
                  android:paddingLeft="4dp">
                </TextView>
                <TextView
                  android:text=""
                  android:id="@+id/metaps_point"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14dp"
                  android:singleLine="true"
                  android:textStyle="bold"
                  android:textColor="#FF8000"
                  android:paddingLeft="4dp">
                </TextView>
                <TextView
                  android:text="points"
                  android:id="@+id/metaps_currency"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textColor="#FF8000"
                  android:textSize="14dp"
                  android:textStyle="bold"
                  android:paddingLeft="4dp">
                </TextView>
                <TextView
                  android:text="$"
                  android:id="@+id/metaps_real_currency"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textSize="14dp"
                  android:singleLine="true"
                  android:textColor="#808080"
                  android:paddingLeft="10dp"
                  android:gravity="center_vertical">
                </TextView>
                <TextView
                  android:text="0"
                  android:id="@+id/metaps_real_price"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textSize="14dp"
                  android:singleLine="true"
                  android:textColor="#808080"
                  android:paddingRight="10dp"
                  android:layout_toRightOf="@+id/metaps_real_currency"
                  android:gravity="center_vertical">
                </TextView>
              </LinearLayout>
            </RelativeLayout>
          </LinearLayout>
        </RelativeLayout>
        <LinearLayout
          android:id="@+id/metaps_summary_area"
          android:orientation="vertical"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/metaps_icon_area">
          <Button
            android:id="@+id/metaps_download_button"
            android:onClick="jumpMarket"
            android:text="Go to market!"
            android:layout_width="fill_parent"
            android:layout_height="46dip"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FF952B"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="7dip"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip">
          </Button>
          <TextView
            android:id="@+id/metaps_outcome_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip" android:visibility="gone">
          </TextView>
          <TextView
            android:id="@+id/metaps_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:textStyle="bold">
          </TextView>
          <TextView
            android:id="@+id/metaps_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip">
          </TextView>
        </LinearLayout>
      </LinearLayout>
    </ScrollView>
  </RelativeLayout>
</LinearLayout>