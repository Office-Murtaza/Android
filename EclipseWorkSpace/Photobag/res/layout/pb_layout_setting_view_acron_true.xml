<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_honey_valid"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/acrons_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/acron_main_image"
        android:gravity="center_vertical|left"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/acron1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/acrons_1line"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/acron2"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/acrons_1line"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/acron3"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/acrons_1line"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/acron_main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <FrameLayout
            android:id="@+id/squarelGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:id="@+id/squirrel_icon_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/my_page_01_squarrel_sleep_counter" />
            
            <ImageView
                android:id="@+id/squirrel_icon_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_page_01_squarrel_counter" />
        </FrameLayout>

        <TextView
            android:id="@+id/acron_count_remain_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/squarelGroup"
            android:shadowColor="@color/black"
            android:text="60"
            android:textColor="#fa6450"
            android:textSize="@dimen/st_text_acron_count_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/acrons_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/acron_main_image"
        android:gravity="center_vertical|right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/acron4"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/acrons_1line"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/acron5"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/acrons_1line"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/acron6"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/acrons_1line"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>