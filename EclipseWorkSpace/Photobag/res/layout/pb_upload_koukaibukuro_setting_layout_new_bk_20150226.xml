<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.aircast.photobag.widget.actionbar.ActionBar
                android:id="@+id/headerbar"
                style="@style/pb_actionbar" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dip"
                android:layout_marginRight="32dip"
                android:layout_marginTop="20dp"
                android:text="@string/pb_koukaisetting_message_1"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/dl_input_bubble_text_size" 
                android:layout_marginBottom="20dip"/>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="150dip" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/kuma12" />

                <TextView
                    android:id="@+id/textview_upload_koukaibukuro_setting_bear_say"
                    android:layout_width="fill_parent"
                    android:layout_height="100dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center"
                    android:text="@string/upload_koukaibukuro_setting_bear_say"
                    android:textColor="@color/main_text_color"
                    android:textSize="12sp" />
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center"
                    android:orientation="vertical" >
                     <TextView
                    android:id="@+id/textview_upload_koukaibukuro_setting_bear_say"
                    android:layout_marginLeft="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/upload_koukaibukuro_setting_bear_say"
                    android:textColor="@color/main_text_color"
                    android:textSize="11sp" />
                </LinearLayout>
                    
            </FrameLayout>

            <LinearLayout
                android:id="@+id/error_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dip"
                android:layout_marginRight="32dip"
                android:layout_marginTop="@dimen/pb_b04_button_margin_top_koukaibukuro"
                android:orientation="vertical"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/dl_input_bubble_text_size" >

                <com.aircast.photobag.widget.FButton
                    android:id="@+id/btn_make_password_public"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/upload_koukaibukuro_make_password_public_btn"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:buttonColor="#ff735a"
                    app:shadowEnabled="false" />
                    
                <com.aircast.photobag.widget.FButton
                    android:id="@+id/btn_make_password_not_public"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/upload_koukaibukuro_make_password_not_public_btn"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:buttonColor="#935243"
                    app:shadowEnabled="false" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/pb_koukaibukuro_setting_blank_view_height_1" />

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="この写真・動画は他人に不快な印象を与え
ません。上記の注意事項を承認し、公開す
ることを承認します。"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/dl_input_bubble_text_size" />
                        
            <LinearLayout 
		        android:id="@+id/layout_koukaisetting_confirm"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="10dp"
		        android:gravity="center"
		        android:orientation="horizontal"
		        android:layout_marginBottom="@dimen/pb_koukaibukuro_setting_text_warning_margin_bottom" >
		
		        <ImageView
		            android:id="@+id/icon_checkbox_confirm_koukaisetting"
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:src="@drawable/checkbox_red_off_flat"
		            android:contentDescription="@string/pb_null" />
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:textColor="@color/gray_deep_dark"
		            android:textSize="13sp"
		            android:textStyle="bold"
		            android:text="@string/pb_koukaisetting_message_2" />
		    </LinearLayout>       

             <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/pb_koukaibukuro_setting_blank_view_height" />

                <com.aircast.photobag.widget.FButton
                    android:id="@+id/btn_make_password_not_public"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/upload_koukaibukuro_make_password_not_public_btn"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:buttonColor="#935243"
                    app:shadowEnabled="false" />
                <com.aircast.photobag.widget.FButton
                    android:id="@+id/btn_make_password_public"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/upload_koukaibukuro_make_password_public_btn"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:buttonColor="#817269"
                    app:shadowEnabled="false" />  
                    
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_loading_panel_waiting"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="#8fff"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:visibility="gone" >

            <ProgressBar
                style="@style/costumLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>