<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#92161F" />
            <stroke 
                android:width="1dp" 
                android:color="#C7323D" />
            <corners android:radius="3dp" />
            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
        </shape>
	</item>
	<item android:state_focused="true">
        <shape>
            <gradient 
                android:angle="270" 
                android:endColor="#8A131B" 
                android:startColor="#D73A45" />
            <stroke 
                android:width="1dp" 
                android:color="#1BA8E0" />
            <corners android:radius="3dp" />
            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
        </shape>
	</item>
    <item>
        <shape>
            <gradient 
                android:angle="270" 
                android:endColor="#8A131B" 
                android:startColor="#D73A45" />
            <stroke 
                android:width="1dp" 
                android:color="#C7323D" />
            <corners android:radius="3dp" />
            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
        </shape>
	</item>
</selector>