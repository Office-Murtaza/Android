<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartmux.androidapp.HomeActivity" >

    <LinearLayout
        android:id="@+id/linearLayout_home_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_info"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_item_one"
            android:layout_width="197dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_kincard" />

        <Button
            android:id="@+id/button_item_two"
             android:layout_width="197dp"
            android:layout_height="100dp"
             android:layout_marginTop="10dp"
            android:background="@drawable/btn_kingame" />

        <Button
            android:id="@+id/button_item_three"
             android:layout_width="197dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_kinlist" />

    </LinearLayout>

    <Button
        android:id="@+id/button_info"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/info_button" />

</RelativeLayout>