<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout
        android:id="@+id/recipent_portion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="RECIPIENT'S DETAILS"
            android:background="@drawable/title_background"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editText_recipient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Recipient's Name"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editText_recipient_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Recipient's Phone"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editText_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Instruction for Driver (Optional)"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipent_portion"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="PARCEL DETAIL"
            android:background="@drawable/title_background"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <!--<EditText-->
        <!--android:id="@+id/editText_parcel_type"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/app_edittext_height"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:cursorVisible="false"-->
        <!--android:ems="10"-->
        <!--android:focusable="true"-->
        <!--android:hint="Parcel Type"-->
        <!--android:inputType="textEmailAddress"-->
        <!--android:padding="5dp"-->
        <!--android:background="@drawable/edittext_background"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textCursorDrawable="@drawable/cursor_shape"-->
        <!--android:textSize="16sp" >-->
        <!--</EditText>-->


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_parcel_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editText_parcel_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Approximate Weight"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


</RelativeLayout>