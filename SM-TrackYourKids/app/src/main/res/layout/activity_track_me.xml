<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartmux.trackyourkids.TrackMeActivity">

    <include layout="@layout/toolbar" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_danfger_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_stop_recording"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="Start danger alert" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_stop_recording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="Stop recording" />
</RelativeLayout>
