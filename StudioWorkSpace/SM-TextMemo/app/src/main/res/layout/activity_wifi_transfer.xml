<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#F49E0B"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wifi_state_image"
            android:layout_width="@dimen/wifi_state_image_size"
            android:layout_height="@dimen/wifi_state_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wifi_state_image_top_mrgn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_wifi_256" />

         <com.smartmux.textmemo.widget.AppTextViewAverinBlack
            android:id="@+id/wifi_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/wifi_state_text_size" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/wifi_transfer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

         <com.smartmux.textmemo.widget.AppTextViewAverinBlack
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wifi_instruction_text_top_mrgn"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/instruction"
            android:textColor="#000000"
            android:textSize="@dimen/wifi_instruction_text_size" />

      <com.smartmux.textmemo.widget.AppTextViewAverinLight
            android:id="@+id/ip_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wifi_instruction_text_top_mrgn"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/wifi_state_text_size" />

        <LinearLayout
            android:id="@+id/start_stop_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/wifi_btn_bottom_mrgn"
            android:layout_marginLeft="@dimen/wifi_btn_left_mrgn"
            android:layout_marginRight="@dimen/wifi_btn_left_mrgn"
            android:layout_marginTop="@dimen/wifi_btn_top_mrgn"
            android:layout_weight="2"
            android:background="@drawable/wifi_btn_bg"
            android:gravity="center" >

             <com.smartmux.textmemo.widget.AppTextViewAverinBlack
                android:id="@+id/start_stop_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="@dimen/wifi_btn_text_size"
                android:textStyle="bold" />
        </LinearLayout>
  
    </LinearLayout>

</LinearLayout>