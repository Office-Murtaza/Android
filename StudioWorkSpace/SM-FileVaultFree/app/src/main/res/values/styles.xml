<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="CodeFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dip</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">8dip</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyTheme.MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_space_between_icon_and_title</item>
        <item name="android:actionModeBackground">@color/action_mode_top_bar</item>
        <item name="android:actionModeCloseDrawable">@drawable/select</item>

    </style>

    <style name="MyTheme.MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.MyActionBar.TitleTextStyle</item>

        <!-- 	<item name="colorPrimary">@color/indigo_500</item> -->
        <!--     <item name="colorPrimaryDark">@color/indigo_700</item> -->
        <!--     <item name="colorAccent">@color/cyan_500</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <!--      <item name="colorControlNormal">#c5c5c5</item>
            <item name="colorControlActivated">@color/accent</item>
            <item name="colorControlHighlight">@color/accent</item> -->
    </style>

    <style name="MyTheme.MyActionBar.TitleTextStyle">
        <item name="android:background">#81CFEB</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CenterJustifyTheme" parent="@android:style/Theme.Panel">
        <item name="android:textViewStyle">@style/CenterJustifyTextView</item>
        <item name="android:windowTitleStyle">@style/CenterJustifyTextView</item>
    </style>
    <style name="CenterJustifyTextView" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
