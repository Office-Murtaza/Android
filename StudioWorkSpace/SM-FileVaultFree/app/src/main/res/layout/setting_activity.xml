<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/setting_layer_padding" >

        <ImageView
            android:id="@+id/image_passworw"
            android:layout_width="@dimen/setting_image_size"
            android:layout_height="@dimen/setting_image_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_image_right_mrgn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_change_password" />

        <com.smartmux.filevaultfree.widget.AppTextViewAverinBlack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_passworw"
            android:text="@string/change_password"
             android:textColor="#000000"
            android:textSize="@dimen/setting_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/settings_item_divider_shape" />

    <RelativeLayout
        android:id="@+id/wifi_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/setting_layer_padding" >

        <ImageView
            android:id="@+id/image_wifi"
            android:layout_width="@dimen/setting_image_size"
            android:layout_height="@dimen/setting_image_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_image_right_mrgn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_wifi_transfer" />

        <com.smartmux.filevaultfree.widget.AppTextViewAverinBlack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_wifi"
            android:text="@string/wifi_transfer"
             android:textColor="#000000"
            android:textSize="@dimen/setting_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/settings_item_divider_shape" />

    <RelativeLayout
        android:id="@+id/dropbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/setting_layer_padding" >

        <ImageView
            android:id="@+id/image_dropbox"
            android:layout_width="@dimen/setting_image_size"
            android:layout_height="@dimen/setting_image_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_image_right_mrgn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_dropbox" />

        <com.smartmux.filevaultfree.widget.AppTextViewAverinBlack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_dropbox"
            android:text="@string/dropbox"
            android:textColor="#000000"
            android:textSize="@dimen/setting_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/settings_item_divider_shape" />
    
    
    <RelativeLayout
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:padding="@dimen/setting_layer_padding" >

        <ImageView
            android:id="@+id/image_version"
            android:layout_width="@dimen/setting_image_size"
            android:layout_height="@dimen/setting_image_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_image_right_mrgn"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_dropbox" />

        <com.smartmux.filevaultfree.widget.AppTextViewAverinBlack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_version"
            android:text="@string/version"
            android:textColor="#000000"
            android:textSize="@dimen/setting_text_size" />
    </RelativeLayout>

</LinearLayout>