<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="CodeFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dip</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">8dip</item>
    </style>
    
  <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/MyTheme.MyActionBar</item>
    <item name="android:homeAsUpIndicator">@drawable/arrow_back</item>
  </style>

  <style name="MyTheme.MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:titleTextStyle">@style/MyTheme.MyActionBar.TitleTextStyle</item>
  
  </style>

  <style name="MyTheme.MyActionBar.TitleTextStyle">
    <item name="android:background">#81CFEB</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textSize">16sp</item>
  </style>
  
</resources>

