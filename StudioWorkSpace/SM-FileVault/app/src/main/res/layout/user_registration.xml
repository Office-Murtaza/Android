    <EditText
        android:id="@+id/user_secret_question"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/password_field_backgroud"
        android:ellipsize="end"
        android:hint="@string/secret_question"
        android:maxLines="1"
         android:gravity="center"
         android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/text_color" />

    <EditText
        android:id="@+id/user_secret_answer"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:background="@drawable/password_field_backgroud"
        android:ellipsize="end"
        android:hint="@string/secret_answer"
        android:maxLines="1"
         android:gravity="center"
         android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
          android:layout_marginBottom="10dp"
        android:textColor="@color/text_color" />

    <EditText
        android:id="@+id/user_secret_password"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:background="@drawable/password_field_backgroud"
        android:ellipsize="end"
        android:hint="@string/secret_password"
        android:maxLines="1"
        android:gravity="center"
         android:maxLength="4"
       
         android:inputType="numberDecimal|numberSigned"
         android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
          android:layout_marginBottom="10dp"
        android:textColor="@color/text_color" />

    <EditText
        android:id="@+id/user_secret_confirm_password"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:background="@drawable/password_field_backgroud"
        android:ellipsize="end"
        android:hint="@string/secret_confirm_password"
        android:inputType="numberDecimal|numberSigned"
        android:maxLines="1" android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
    android:maxLength="4"
          android:layout_marginBottom="10dp"
       android:textColor="@color/text_color" />

    <Button
        android:id="@+id/user_registration_confirm"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_corner"
        android:textColor="#fff"
        android:text="@string/registration_submit" />

</LinearLayout>