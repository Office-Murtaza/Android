<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout"
    android:layout_width="@dimen/list_item_wt"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#373737"
    android:gravity="center"
    android:orientation="vertical" >

    <com.smartmux.fotolibs.widget.AppTextView
        android:id="@+id/im_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_image_wt"
        android:layout_height="@dimen/list_image_ht"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/filter_tool" />

    <com.smartmux.fotolibs.widget.AppTextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:textColor="@color/pure_white"
        android:textSize="@dimen/row_text_size" />

</LinearLayout>