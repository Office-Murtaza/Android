<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ksproject.krishop.activity.FramerDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.ksproject.krishop.widget.AppTextViewLatoRegular
                android:id="@+id/action_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_18"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/farmer_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cox"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_10"
        />



        <com.ksproject.krishop.widget.AppTextViewLatoBold
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Name"
            android:textSize="@dimen/txt_size_18"
            android:textColor="@android:color/black"
            android:padding="@dimen/txt_padding_10"
            />


    <com.ksproject.krishop.widget.AppTextViewLatoRegular
        android:id="@+id/address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Address"
        android:textSize="@dimen/txt_size_16"
        android:textColor="@android:color/black"
        android:padding="@dimen/txt_padding_10"
        />

    <com.ksproject.krishop.widget.AppTextViewLatoRegular
        android:id="@+id/phone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="phone"
        android:textSize="@dimen/txt_size_16"
        android:textColor="@android:color/black"
        android:padding="@dimen/txt_padding_10"
        android:drawableRight="@mipmap/phone_contact"
        />

</LinearLayout>
